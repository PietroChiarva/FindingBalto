<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrati"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.itspiemonte.pietro.findingbalto.Registrati">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrati"
        android:id="@+id/textRegistrati"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textNome"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="Nome*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textNome"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/textRegistrati"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Cognome*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCognome"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textNome"
        android:layout_alignStart="@+id/textNome" />

    <TextView
        android:text="Email*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textViewEmail"
        android:layout_below="@+id/textViewCognome"
        android:layout_alignStart="@+id/textViewCognome" />

    <TextView
        android:text="Telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignEnd="@+id/textRegistrati"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewTelefono" />

    <TextView
        android:text="Crea Password*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTelefono"
        android:layout_alignStart="@+id/textViewTelefono"
        android:layout_marginTop="21dp"
        android:id="@+id/textViewPassword1" />

    <TextView
        android:text="Conferma password*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPassword1"
        android:layout_alignStart="@+id/textViewEmail"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewPassword2" />

    <CheckedTextView
        android:text="Conferma la password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextPassword2"
        android:layout_alignBaseline="@+id/textViewPassword2"
        android:layout_alignBottom="@+id/textViewPassword2"
        android:layout_toEndOf="@+id/textViewPassword2"
        android:layout_marginStart="24dp" />

    <CheckedTextView
        android:text="Inserisci la password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextPassword"
        android:layout_above="@+id/textViewPassword2"
        android:layout_alignStart="@+id/checkedTextPassword2" />

    <CheckedTextView
        android:text="Inserisci numero di telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextTelefono"
        android:layout_above="@+id/textViewPassword1"
        android:layout_alignStart="@+id/checkedTextPassword" />

    <CheckedTextView
        android:text="inserisci email "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextEmail"
        android:layout_above="@+id/textViewTelefono"
        android:layout_alignStart="@+id/checkedTextTelefono" />

    <CheckedTextView
        android:text="Inserisci il tuo cognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextCognome"
        android:layout_alignBaseline="@+id/textViewCognome"
        android:layout_alignBottom="@+id/textViewCognome"
        android:layout_alignStart="@+id/checkedTextEmail" />

    <CheckedTextView
        android:text="Inserisci nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkedTextNome"
        android:contentDescription="Inserisci il tuo nome"
        android:layout_alignBaseline="@+id/textNome"
        android:layout_alignBottom="@+id/textNome"
        android:layout_alignStart="@+id/checkedTextCognome" />

    <TextView
        android:text="*Campo obbligatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textViewcampo"
        android:layout_below="@+id/textViewPassword2"
        android:layout_toStartOf="@+id/checkedTextPassword2" />

    <Button
        android:text="REGISTRATI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/buttonRegistrati"
        android:layout_below="@+id/textViewcampo"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
